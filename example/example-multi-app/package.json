{
  "name": "example-multi-app",
  "version": "2.1.2",
  "private": true,
  "devDependencies": {
    "mrbuilder": "^2.1.1",
    "mrbuilder-plugin-sass": "^2.1.1",
    "mrbuilder-preset-app": "^2.1.2"
  },
  "scripts": {
    "start": "mrbuilder",
    "prepublish": "NODE_ENV=production mrbuilder"
  },
  "mrbuilder": {
    "presets": [
      "mrbuilder",
      "mrbuilder-preset-app"
    ],
    "plugins": [
      [
        "mrbuilder-plugin-babel",
        {
          "transform-runtime": false
        }
      ],
      [
        "mrbuilder-plugin-css",
        {
          "localIdentName": "[package-name]«[hyphen:rel-name]»[local]"
        }
      ],
      [
        "mrbuilder-plugin-stylus",
        {
          "modules": true
        }
      ],
      [
        "mrbuilder-plugin-less",
        {
          "modules": true
        }
      ],
      [
        "mrbuilder-plugin-sass",
        {
          "modules": true
        }
      ],
      [
        "mrbuilder-plugin-webpack",
        {
          "app": "app",
          "entry": {
            "index": "./public/index",
            "other": "./public/other"
          }
        }
      ],
      [
        "mrbuilder-plugin-html",
        {
          "pages": {
            "index": {
              "title": "Index"
            },
            "other": {
              "title": "Other",
              "exported": true
            }
          }
        }
      ]
    ],
    "env": {
      "development": {
        "plugins": [
          [
            "mrbuilder-plugin-webpack-dev-server",
            {
              "rewrite": {
                "/frown.:ext": "/smile.{ext}"
              },
              "socketTimeout": 5000
            }
          ],
          "mrbuilder-plugin-hot"
        ]
      }
    }
  },
  "license": "0BSD"
}
