{
  "name": "@mrbuilder/plugin-karma",
  "version": "4.2.0-alpha.2",
  "description": "Tools for developing with mrbuilder and karma",
  "scripts": {
    "test": "mrbuilder-mocha"
  },
  "bin": {
    "mrbuilder-karma-cli": "./bin/cli.js"
  },
  "dependencies": {
    "@mrbuilder/optionsmanager": "^4.2.0-alpha.2",
    "@mrbuilder/plugin-enzyme": "^4.2.0-alpha.2",
    "@mrbuilder/plugin-mocha": "^4.2.0-alpha.2",
    "@mrbuilder/plugin-webpack": "^4.2.0-alpha.2",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-firefox-launcher": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^4.0.2"
  },
  "source": "src",
  "main": "src",
  "mrbuilder": {
    "alias": {
      "mainFields": "Sets main fields for easier debugging"
    },
    "options": {
      "pattern": "/[-.](?:test|spec)\\.[jet]sx?$/",
      "pathinfo": true,
      "node": {
        "fs": "empty",
        "net": "empty",
        "console": false,
        "util": true
      },
      "mainFields": [
        "source",
        "browser",
        "main"
      ],
      "testDir": "./test",
      "include": [
        "./src",
        "./public"
      ]
    },
    "plugins": [
      "@mrbuilder/plugin-browserslist",
      "@mrbuilder/plugin-webpack",
      "@mrbuilder/plugin-enzyme",
      "@mrbuilder/plugin-mocha"
    ]
  },
  "peerDependencies": {
    "@mrbuilder/cli": "^4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org"
  },
  "license": "MIT"
}