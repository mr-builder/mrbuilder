{
  "name": "@mrbuilder/plugin-karma",
  "version": "4.5.0",
  "description": "Tools for developing with mrbuilder and karma",
  "scripts": {
    "test": "mrbuilder-mocha"
  },
  "bin": {
    "mrbuilder-karma-cli": "./bin/cli.js"
  },
  "dependencies": {
    "@mrbuilder/optionsmanager": "^4.5.0",
    "@mrbuilder/plugin-enzyme": "^4.3.0",
    "@mrbuilder/plugin-mocha": "^4.5.0",
    "@mrbuilder/plugin-webpack": "^4.5.0",
    "@types/enzyme": "^3.10.5",
    "karma": "^6.0.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^4.0.2"
  },
  "source": "src",
  "main": "src",
  "mrbuilder": {
    "alias": {
      "mainFields": "Sets main fields for easier debugging",
      "browsers": "which browsers to test with"
    },
    "options": {
      "pattern": "/[-.](?:test|spec)\\.[jet]sx?$/",
      "pathinfo": true,
      "node": {
        "fs": "empty",
        "net": "empty",
        "console": false,
        "util": true
      },
      "mainFields": [
        "source",
        "browser",
        "main"
      ],
      "testDir": "./test",
      "include": [
        "./src",
        "./public"
      ]
    },
    "plugins": [
      "@mrbuilder/plugin-browserslist",
      "@mrbuilder/plugin-webpack",
      "@mrbuilder/plugin-enzyme",
      "@mrbuilder/plugin-mocha",
      [
        "@mrbuilder/cli",
        {
          "test": true
        }
      ]
    ],
    "env": {
      "test": {
        "options": {
          "browsers": [
            "Firefox"
          ]
        }
      },
      "karma": {
        "options": {
          "browsers": [
            "Chrome"
          ]
        }
      }
    }
  },
  "peerDependencies": {
    "@mrbuilder/cli": "^4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org"
  },
  "license": "MIT"
}
