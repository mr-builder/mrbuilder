{
  "name": "@mrbuilder/plugin-markdown",
  "description": "Provides markdown to react components",
  "version": "4.2.0-alpha.2",
  "scripts": {
    "test": "MRBUILDER_PLUGINS=@mrbuilder/plugin-markdown mrbuilder-karma  --@mrbuilder/plugin-karma.browsers='[SimpleHeadlessChrome]'",
    "karma": "MRBUILDER_PLUGINS=@mrbuilder/plugin-markdown mrbuilder-karma --@mrbuilder/plugin-mocha.filePattern=*-mocha.js",
    "start": "MRBUILDER_PLUGINS=@mrbuilder/plugin-markdown mrbuilder"
  },
  "dependencies": {
    "@mrbuilder/plugin-babel": "^4.2.0-alpha.2",
    "@mrbuilder/utils": "^4.2.0-alpha.2",
    "markdown-it": "^10.0.0",
    "markdown-it-checkbox": "^1.1.0",
    "react-syntax-highlighter": "^12.2.1"
  },
  "devDependencies": {
    "@mrbuilder/plugin-babel": "^4.0.1",
    "@mrbuilder/plugin-karma": "^4.2.0-alpha.2"
  },
  "peerDependencies": {
    "@mrbuilder/cli": "^4.0.0"
  },
  "source": "src",
  "main": "src",
  "mrbuilder": {
    "plugin": "./src/index",
    "options": {
      "test": "/\\.mdx?$/",
      "extensions": {
        "sh": "shell",
        "js": "javascript",
        "ts": "typescript",
        "tsx": "typescript",
        "es6": "javascript",
        "jsx": "javascript",
        "css": "stylesheets",
        "less": "less",
        "styl": "stylus"
      },
      "highlighter": "hljs",
      "theme": "atom-one-light",
      "html": true,
      "markdownPlugins": [
        "markdown-it-checkbox"
      ]
    },
    "plugins": [
      "@mrbuilder/plugin-babel"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org"
  },
  "license": "MIT"
}