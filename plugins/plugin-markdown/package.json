{
  "name": "@mrbuilder/plugin-markdown",
  "description": "Provides markdown to react components",
  "version": "4.0.0-alpha.9",
  "scripts": {
    "test": "MRBUILDER_PLUGINS=@mrbuilder/plugin-markdown mrbuilder-karma",
    "karma": "MRBUILDER_PLUGINS=@mrbuilder/plugin-markdown mrbuilder-karma --@mrbuilder/plugin-mocha.filePattern=*-mocha.js",
    "start": "MRBUILDER_PLUGINS=@mrbuilder/plugin-markdown mrbuilder"
  },
  "dependencies": {
    "@mrbuilder/plugin-babel": "^4.0.0-alpha.9",
    "@mrbuilder/utils": "^4.0.0-alpha.9",
    "markdown-it": "^10.0.0",
    "markdown-it-checkbox": "^1.1.0",
    "react-syntax-highlighter": "^11.0.2"
  },
  "devDependencies": {
    "@mrbuilder/plugin-karma": "^4.0.0-alpha.9"
  },
  "peerDependencies": {
    "@mrbuilder/cli": "^4.0.0"
  },
  "source": "src",
  "main": "src",
  "mrbuilder": {
    "plugin": "./src/index",
    "options": {
      "test": "/\\.mdx?$/",
      "extensions": {
        "sh": "shell",
        "js": "javascript",
        "es6": "javascript",
        "jsx": "javascript",
        "css": "stylesheets",
        "less": "less",
        "styl": "stylus"
      },
      "highlighter": "hljs",
      "theme": "atom-one-light",
      "html": true,
      "markdownPlugins": [
        "markdown-it-checkbox"
      ]
    }
  },
  "license": "0BSD",
  "gitHead": "771c5d4ad70156a7c7e8730c68369ed872e2cfec",
  "publishConfig": {
    "access": "public"
  }
}
