{
  "name": "@mrbuilder/plugin-mocha",
  "version": "4.4.6",
  "description": "Tools for developing with mrbuilder and mocha",
  "scripts": {
    "clean": "mrbuilder-clean"
  },
  "bin": {
    "mrbuilder-mocha-cli": "./bin/cli.js"
  },
  "dependencies": {
    "@mrbuilder/optionsmanager": "^4.4.6",
    "@mrbuilder/plugin-babel": "^4.4.6",
    "chai": "^4.2.0",
    "jsdom": "^16.2.2",
    "mocha": "^8.2.1",
    "raf": "^3.4.1"
  },
  "main": "src",
  "source": "src",
  "mrbuilder": {
    "options": {
      "@babel": "./babel",
      "testDir": "test",
      "filePattern": "*[.-]!(karma[.-]){test,spec}.{js,jsx,ts,tsx,es,esx,es6}",
      "timeout": "2000",
      "useBabel": true
    },
    "plugins": [
      [
        "@mrbuilder/cli",
        {
          "test": true
        }
      ]
    ]
  },
  "peerDependencies": {
    "@mrbuilder/cli": "^4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org"
  },
  "license": "MIT"
}
