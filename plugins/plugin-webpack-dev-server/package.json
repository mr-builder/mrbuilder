{
  "name": "@mrbuilder/plugin-webpack-dev-server",
  "version": "4.4.6",
  "description": "webpack dev server for mrbuilder",
  "dependencies": {
    "@mrbuilder/optionsmanager": "^4.4.6",
    "@mrbuilder/plugin-webpack": "^4.4.6",
    "@mrbuilder/utils": "^4.4.6",
    "hard-source-webpack-plugin": "^0.13.1",
    "loglevel": "^1.6.6",
    "webpack-cli":"^4.7.2"
  },
  "source": "src",
  "main": "src",
  "bin": {
    "mrbuilder-webpack-server-cli": "./bin/cli.js"
  },
  "mrbuilder": {
    "alias": {
      "hot": "Run with HMR",
      "noHot": "Disable HMR",
      "public": "Webpack dev server public path",
      "useExternals": "Externalize a list of dependencies for use with libraries",
      "entry": "Entry point or points",
      "port": "port to listen to defaults 8082"
    },
    "plugins": [
      "@mrbuilder/plugin-webpack",
      "@mrbuilder/plugin-html",
      [
        "@mrbuilder/cli",
        {
          "devServer": true
        }
      ]
    ],
    "options": {
      "historyApiFallback": true,
      "inline": true,
      "contentBase": "public",
      "port": 8082,
      "filename": "index.js"
    }
  },
  "peerDependencies": {
    "@mrbuilder/cli": "^4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org"
  },
  "license": "MIT"
}
